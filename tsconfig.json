{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": [
			"core-js",
			"node",
			"toastr",
			"jquery"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"angularCompilerOptions": {
		"genDir": "./ngfactory"
	}
}